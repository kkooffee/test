@model Game
@{
    ViewData["Title"] = "UpdateGame";
}

<div class="row">
    <h2>"Редактировать игру"</h2>
    <form asp-action="UpdateGame" method="post" class="form-horizontal">
        <div class="form-group" hidden>
            <label asp-for="id"></label>
            <div>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="name"></label>
            <div>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="development"></label>
            <div>
                <input asp-for="development" class="form-control" />
                <span asp-validation-for="development" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="genre"></label>
            <div>
                <input asp-for="genre" class="form-control" />
                <span asp-validation-for="genre" class="text-danger" />
            </div>
        </div>
        <button class="btn-success" type="submit">Сохранить</button>

    </form>
</div>


